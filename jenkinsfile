pipeline{
agent any

        stages{




			    stage('Build docker image'){
                             steps{
                                 script{
                                    sh 'docker build -t oumaymafarhani/angularproject .'
                                 }
                             }
                         }




      stage('Docker login') {

                                         steps {
                                          sh 'echo "login Docker ...."'
                   	sh 'docker login -u oumaymafarhani -p 29416927Oumayma'
                               }  }
		 stage('Docker push') {

                 steps {
                      sh 'echo "Docker is pushing ...."'
                     	sh 'docker push oumaymafarhani/angularproject'
                        }  }

     


stage('Sending email'){
	    steps {
	        mail bcc: '', body: '''Hello from oumayma farhani,
	        Devops Pipeline with success.
	        Cordialement''', cc: '', from: '', replyTo: '', subject: 'Devops', to: 'oumayma.farhani@esprit.tn'
	             }
	        }

}


  }